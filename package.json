{
    "name": "aurora-rpc-client",
    "version": "0.2.0",
    "description": "Aurora RPC Client implementation",
    "main": "./dist/node.cjs",
    "browser": "./dist/browser.js",
    "types": "./dist/types/index.d.ts",
    "exports": {
        "browser": "./dist/browser.js",
        "import": "./dist/node.mjs",
        "require": "./dist/node.cjs"
    },
    "scripts": {
        "build": "rimraf dist && node build.js && tsc --emitDeclarationOnly",
        "prepublishOnly": "npm run build",
        "prettier": "prettier --write src",
        "lint": "eslint --ext .ts src",
        "lint:fix": "npm run lint -- --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AuroraTeam/AuroraRPC-Client.git"
    },
    "keywords": [
        "ws",
        "rpc",
        "websocket"
    ],
    "author": "AuroraTeam",
    "contributors": [
        "JoCat (https://github.com/JoCat)"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/AuroraTeam/AuroraRPC-Client/issues"
    },
    "homepage": "https://github.com/AuroraTeam/AuroraRPC-Client#readme",
    "dependencies": {
        "modern-isomorphic-ws": "^1.0.1",
        "nanoid": "^4.0.0"
    },
    "devDependencies": {
        "@tsconfig/node18": "^1.0.1",
        "@types/ws": "^8.5.3",
        "@typescript-eslint/eslint-plugin": "^5.25.0",
        "@typescript-eslint/parser": "^5.25.0",
        "esbuild": "^0.15.7",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "import-sort-style-module": "^6.0.0",
        "prettier": "^2.6.2",
        "prettier-plugin-import-sort": "^0.0.7",
        "rimraf": "^4.4.1",
        "typescript": "^5.0.2"
    },
    "importSort": {
        ".js, .ts": {
            "style": "module",
            "parser": "typescript"
        }
    }
}
